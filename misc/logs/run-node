#!/usr/bin/env perl

use strict;
use warnings;

use Getopt::Std;

my %ami_config = (
    'linux i386' => 'ami-65bd0d0c', # ortest-linux-i386-7
    #'linux i386' => 'ami-45ca7b2c', # ortest-linux-i386-6
    #'linux x86_64' => 'ami-799a2f10', # ortest-linux-x86_64-5
    'linux x86_64' => 'ami-45e9582c', # ortest-linux-x86_64-6
);

my %opts;
getopts("ca:k:t:", \%opts) or
    die "Usage: $0 [-t <instance-type>] [-k <key-pair-name>] -a <arch> <user-data>\n";

my $arch = $opts{a}
    or die "No -a <arch> option specified.\n";

my $ami = $ami_config{$arch}
    or die "Unknown architecture $arch.\n";

my $keypair = $opts{k} || 'agentzh';

my $instance_type = $opts{t};

if (!defined $instance_type) {
    if ($arch eq 'linux x86_64') {
        $instance_type = 'm2.xlarge';

    } else {
        $instance_type = 'c1.medium';
    }
}

my $user_data = join (" ", @ARGV)
    or die "No user data specified.\n";

my @cmd = ("ec2-run-instances", $ami, "-k", $keypair, "-d", $user_data,
        "--debug", "-t", $instance_type, '--availability-zone', 'us-east-1b',
        '--instance-initiated-shutdown-behavior', 'terminate',
        '-g', 'quick-start-1');

my $check = $opts{c};

print "@cmd\n";

if ($check) {
    exit;
}

system @cmd;

